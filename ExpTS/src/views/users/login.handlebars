<form action "/users/login" method="POST">
    <div class="mb-3">
        <label for="email" class="form-label">Email:</label>
        <input 
            type="email" 
            value = "{{user.email}}"
            id="email" 
            name="email" 
            class="form-control" 
            required><br><br>

        <label for="password" class="form-label">Password:</label>
        <input 
            value = "{{user.password}}"
            type="password" 
            id="password" 
            name="password" 
            class="form-control" 
            required><br><br>

        <button type="submit" class="btn btn-primary">Create User</button>
    </div>
</form>