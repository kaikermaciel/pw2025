<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-trophy-fill text-warning"></i> Ranking de Jogadores</h2>
    <h4><a href="/"><i class="bi bi-arrow-left-square"></i> </a></h4>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th scope="col" class="text-center" style="width: 5%;">#</th>
                <th scope="col">Jogador</th>
                <th scope="col" class="text-end">Pontuação Máxima</th>
            </tr>
        </thead>
        <tbody>
            {{#each scores}}
            <tr>
                <th scope="row" class="text-center">{{@index_1}}</th>
                <td>{{this.userName}}</td>
                <td class="text-end fw-bold">{{this.score}}</td>
            </tr>
            {{else}}
            <tr>
                <td colspan="3" class="text-center fst-italic py-4">Nenhuma pontuação registrada ainda. Seja o primeiro a jogar!</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>